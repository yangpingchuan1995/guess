/* pages/help/help.wxss */
/* pages/answer/answer.wxss */
@import "../../utils/font.wxss";
page{
  height: 100%;
}
.top_top{
  position:relation;
}
navigator .navigator_top_img{
  width:26px;
  height:28px;
  float: left;
}
.headline{
  margin-top: 0%;
}
.headline .headline_top{
  font-size:80rpx;
  color:#fff;
}

.headline .headline_tops{
  /*font-size:80rpx;*/
  color:#fff;
}

.headline view {
  text-align: center;
  color: #9b8173;
  font-weight: 900;
  display:block;
  margin-left:0%;
}

.headline .head_img .head_img_left{
  background: #fff url(../../images/k1.png) 0 0 no-repeat;
  
}

.headline .headline_center .headline_center_img{
  border:5px solid #91793d;
  border-radius:26px;
  align-items:center;
}

.headline_center_img_center{
  margin:0px 10px 40px 10px;
}


/* 成语显示区域---------------开始---------------- */
.answer_top{
  margin-top:8%;
}

.answer view {
  margin-right: 3%;
  border-radius: 5px;
}
.answer {
  text-align: center;
  border-bottom: 4px dotted #9c8275;
  border-top: 4px dotted #9c8275;
  margin-top: 5%;
  width: 100%;
  height: 15vw;
  display: flex;
  justify-content: center;
  align-items: center;
  position:fixed;
  bottom:26%;
}

.content {
  flex-direction:row;
  width:9%;
  background-color:#91793d;
  height:63%;

  text-align:center;
  border:3px solid #e7e7c3;
  border-radius:5px;
  box-sizing:border-box;
  line-height:5.125vh;
}

.content .iconfont{
  color:#fff;
  font-size:26px;
}
/* 成语显示区域---------------结束---------------- */

/* 底部选择区域---------------开始---------------- */
.option view {
  flex-direction: row;
  width: 10.25%;
  background-color:#d6b27a;
  height: 10.25vw;
  margin-left: 2%;
  margin-top: 2%;
  text-align: center;
  border: 3px solid #ffffff;
  border-radius: 5px;
  box-sizing: border-box;
  line-height: 5.125vh;
}

.option {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  position:fixed;
  bottom:2%;
}

.option view .iconfont{
  color:#5b4a20;
  font-size:26px;
}
/* 底部选择区域---------------开始---------------- */